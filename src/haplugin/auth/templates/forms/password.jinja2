<div class="form-group">
    {% if error %}
        {% for message in messages %}
            <div class="label label-danger">
                {{message()}}
            </div>
        {% endfor %}
        {% if value_message %}
            <div class="label label-danger">
                {{value_message()}}
            </div>
        {% endif %}
    {% endif %}
    <input
        class="form-control"
        placeholder="{{label}}"
        name="{{name}}"
        id="{{id}}"
        type="password"
        {%- if disabled %} disabled=disabled {% endif -%}
        {%- if autofocus %} autofocus{% endif -%}
        >
</div>
